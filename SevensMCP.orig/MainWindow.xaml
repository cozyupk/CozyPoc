<Window x:Class="CozyPoC.SevensMCP.MainWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:CozyPoC.SevensMCP.Models"
        Title="SevensMCP" Width="1000" Height="450">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding Cards}">
            <ItemsControl.ItemsPanel>
                <!-- 13列×4行の均等グリッド -->
                <ItemsPanelTemplate>
                    <UniformGrid Columns="13" Rows="4"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Margin" Value="1"/>
                </Style>
            </ItemsControl.ItemContainerStyle>

            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:Card}">
                    <Border CornerRadius="2" Padding="1" BorderThickness="1" BorderBrush="#33000000">
                        <Image Source="{Binding FilePath}"
                   Stretch="Uniform" Width="53" Height="77"
                   SnapsToDevicePixels="True"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>